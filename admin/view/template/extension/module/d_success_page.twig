{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button id="save_and_stay" data-toggle="tooltip" title="{{ button_save_and_stay }}" class="btn btn-success">
                    <i class="fa fa-save"></i>
                </button>
                <button type="submit" form="form" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
                    <i class="fa fa-save"></i>
                </button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default">
                    <i class="fa fa-reply"></i>
                </a>
            </div>
            <h1>{{ heading_title }} {{version}}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                <li>
                    <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
        <div class="alert alert-danger alert-dismissible">
            <i class="fa fa-exclamation-circle"></i> {{ error_warning }}
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-status">
                            <span data-toggle="tooltip" title="{{ entry_status }}">
                                Status
                            </span>
                        </label>
                        <div class="col-sm-8">
                            <input type="hidden" value="0" name="{{ codename }}_status" />
                            <input type="checkbox" value="1" name="{{ codename }}_status" {{ d_success_page_status ? 'checked="checked"' : '' }} id="input-status"
                            />
                        </div>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab-general">
                            <ul class="nav nav-pills" id="language">
                                {% for language in languages %}
                                <li>
                                    <a href="#language{{ language.language_id }}" data-toggle="tab">
                                        <img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a>
                                </li>
                                {% endfor %}
                            </ul>
                            <hr>
                            <div class="tab-content">{% for language in languages %}
                                <div class="tab-pane active" id="language{{ language.language_id }}">
                                    <div class="form-group required">
                                        <label class="col-sm-2 control-label" for="input-d_success_page_description{{ language.language_id }}">Enter title of success page</label>
                                        <div class="col-sm-10">
                                            <input type="text" name="d_success_page_description[{{ language.language_id }}][title]" value="{{ d_success_page_description[language.language_id] ? d_success_page_description[language.language_id].title }}" placeholder="{{ entry_title }}" id="input-success_page{{ language.language_id }}" class="form-control" /> {% if error_d_success_page_description[language.language_id] %}
                                            <div class="text-danger">{{ error_d_success_page_description[language.language_id] }}</div>
                                            {% endif %} </div>
                                    </div>
                                    <div class="form-group required">
                                        <label class="col-sm-2 control-label" for="input-d_success_page_description{{ language.language_id }}">Entry success page text</label>
                                        <div class="col-sm-10">
                                            <textarea name="d_success_page_description[{{ language.language_id }}][description]" placeholder="{{ entry_description }}" id="d_success_page_description{{ language.language_id }}" data-toggle="summernote" data-lang="{{ summernote }}" class="form-control">{{ d_success_page_description[language.language_id] ? d_success_page_description[language.language_id].description }}</textarea>
                                             {% if error_description[language.language_id] %}
                                            <div class="text-danger">{{ error_d_success_page_description[language.language_id] }}</div>
                                            {% endif %} </div>
                                    </div>
                                </div>
                                {% endfor %}</div>
                        </div>
                </form>
            </div>
        </div>
    </div>
</div>

<link href="view/javascript/codemirror/lib/codemirror.css" rel="stylesheet" />
<link href="view/javascript/codemirror/theme/monokai.css" rel="stylesheet" />
<script type="text/javascript" src="view/javascript/codemirror/lib/codemirror.js"></script>
<script type="text/javascript" src="view/javascript/codemirror/lib/xml.js"></script>
<script type="text/javascript" src="view/javascript/codemirror/lib/formatting.js"></script>
<script type="text/javascript" src="view/javascript/summernote/summernote.js"></script>
<link href="view/javascript/summernote/summernote.css" rel="stylesheet" />
<script type="text/javascript" src="view/javascript/summernote/summernote-image-attributes.js"></script>
<script type="text/javascript" src="view/javascript/summernote/opencart.js"></script>
<script type="text/javascript">
        $('#language a:first').tab('show');
</script>
<script>
    $("[type='checkbox']").bootstrapSwitch({
            'onColor': 'success',
            'onText': 'Yes',
            'offText': 'Off',
        });

        $('body').on('click', '#save_and_stay', function () {
                $.ajax({
                    type: 'post',
                    url: $('#form').attr('action'),
                    data: $('#form').serialize(),
                    dataType: 'json',
                    beforeSend: function () {
                        $('#content').fadeTo('slow', 0.5);
                    },
                    complete: function () {
                        $('#content').fadeTo('slow', 1);
                    },
                    success: function (json) {
                        showAlert(json);
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        console.log(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
                    }
                });
            });
</script>
{{ footer }}